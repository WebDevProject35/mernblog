<%- include("partials/header") -%>
<h1 class="mt-3">Compose</h1>

<form class="" action="/" method="post">
  <div class="mb-3">
    <label for="inputTitle" class="form-label">Title</label>
    <input type="text" class="form-control" id="inputTitle" placeholder="Post title">
  </div>

  <div class="mb-3">
    <label for="inputContent" class="form-label">Content</label>
    <textarea class="form-control" id="inputContent" rows="5"></textarea>
  </div>

  <div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <button class="btn btn-primary" type="button">Publish</button>
  </div>
</form>


<%- include("partials/footer") -%>
